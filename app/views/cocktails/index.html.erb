<nav class="navbar-light bg-dark">
  <div class="banner-content">
    <h1 class="text-light d-flex-inline-center">Cocktails</h1>
    <%= link_to "Add a cocktail", new_cocktail_path, class: "text-light m-5" %>
  </div>
</nav>

<div class="row row-cols-sm-4 p-5 m-auto">
  <% @cocktails.each do |cocktail| %>
    <div class="card p-2 m-5">
      <img src="https://images.unsplash.com/photo-1551024709-8f23befc6f87?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1650&q=80" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">
            <p><%= cocktail.name %></p>
          </h5>
        <p class="card-text"></p>
        <%= link_to "more details", cocktail_path(cocktail), class: "btn btn-dark text-light"  %>
        </div>
    </div>
 <% end %>
</div>


